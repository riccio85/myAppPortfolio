<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk">
<LinearLayout
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
<!-- android:background="#ffab40"-->
    <TextView
        android:id="@+id/text"
        android:gravity="center"
        android:text="The cat in the Hat Apps "
        style="@style/MtTextViewStyle.BoldRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- style="?android:attr/buttonStyle"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="70dp" >
        <Button
        android:id="@+id/cat"
        android:layout_width="200dp"
        android:paddingLeft="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="The cat"
        android:drawableLeft="@drawable/cat"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


            <Button
                android:id="@+id/thing1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:background="@drawable/button_shape"
                android:layout_gravity="right"
                android:text="Thing 1"
                android:drawableLeft="@drawable/thingone"/>

            <Button

                android:id="@+id/thing2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:background="@drawable/button_shape2"
                android:text="Thing 2"
                android:drawableRight="@drawable/thingtwo"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="70dp" >
        <Button
            android:id="@+id/thingamajigger"
            android:layout_width="200dp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            android:text="Thingamajigger"
            android:drawableLeft="@drawable/jigger"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="70dp" >
        <Button
            android:id="@+id/sally"
            android:layout_width="200dp"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            android:text="Sally"
            android:drawableLeft="@drawable/sally"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="70dp" >
        <Button
            android:id="@+id/nick"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            android:text="Nick"
            android:drawableLeft="@drawable/nick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="70dp" >
        <Button
            android:id="@+id/seuss"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/seuss"
            android:background="@drawable/button_shape"
            android:text="Dr. Seuss"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>